{
  "name": "mworks",
  "version": "1.0.0",
  "description": "MWorks - A professional application for editing ground floor plans with a canvas interface.",
  "main": "src/main/electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build-electron": "electron-builder",
    "lint": "eslint .",
    "webpack-dev": "webpack serve --mode development",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on dist/index.html && electron .\""
  },
  "keywords": [
    "electron",
    "react",
    "canvas",
    "floor plan",
    "architecture",
    "engineering",
    "mworks"
  ],
  "author": "liminalFrog",
  "license": "MIT",
  "dependencies": {
    "electron": "^25.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "autoprefixer": "^10.0.0",
    "babel-loader": "^8.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^6.8.0",
    "electron-builder": "^25.0.0",
    "eslint": "^8.0.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss": "^8.0.0",
    "postcss-loader": "^7.3.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.mworks.app",
    "productName": "MWorks",
    "files": [
      "dist/**/*",
      "src/**/*",
      "public/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "publisherName": "liminalFrog"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "publisherName": "liminalFrog"
    }
  }
}
